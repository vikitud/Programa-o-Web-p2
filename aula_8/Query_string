exemplo
    
    <?php
        include_once "topo.php";
        include_once "menu.php";

        //conteudo
        if(empty($_SERVER["QUERY_STRING"])){
            $var = "conteudo";
             include "$var.php";
        } else {
            $pg = $_GET["pg"];
            include_once "$pg.php";

            include_once "rodape.php";
        }

        ?>

